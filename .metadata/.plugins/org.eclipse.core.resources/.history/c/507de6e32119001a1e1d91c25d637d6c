package interviewbit;

public class Ways_to_color_a_3xN_Board {
	 public int solve(int A) {
	        long color3=24;
	        long color2=12;
	        
	        for(int i=2;i<=A;i++){
	            long temp=color3;
	            color3=(11*color3+10*color2)%1000000007;
	            color2=(5*temp+7*color2)%1000000007;
	        }
	        long ans=(color2+color3)%1000000007;
	        
	        return (int)ans;
	    }
}
