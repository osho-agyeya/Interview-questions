package ctci;

public class Next_Number {
	
	static int getPrev(int n) 
	{ 
	    /* Compute c0 and  
	    c1 and store N*/
	    int temp = n; 
	    int c0 = 0; 
	    int c1 = 0; 
	  
	    while ((temp & 1) == 1) 
	    { 
	        c1++; 
	        temp = temp >> 1; 
	    } 
	  
	    if (temp == 0) 
	        return -1; 
	  
	    while (((temp & 1) == 0) &&  
	            (temp!= 0)) 
	    { 
	        c0++; 
	        temp = temp >> 1; 
	    } 
	  
	    return n - (1 << c1) -  
	               (1 << (c0 - 1)) + 1; 
	} 

}
