package ctci;

public class Master_Mind {
	
	string getHint(string answer, string guess) {
	    int m[256] = {0}, h = 0, p = 0;
	    for (int i = 0; i < answer.size(); ++i) {
	        if (answer[i] == guess[i]) ++h;
	        else {
	            if (m[answer[i]]++ < 0) ++p;
	            if (m[guess[i]]-- > 0) ++p;
	        }
	    }
	    return to_string(h) + "H" + to_string(p) + "P";
	}

}
