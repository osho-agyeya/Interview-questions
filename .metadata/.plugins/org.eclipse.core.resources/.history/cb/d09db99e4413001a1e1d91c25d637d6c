package interviewbit;

import java.util.Arrays;

public class Coins_in_a_Line {
	
	 private int fun(int l, int r, int[] a, int[][] mem){
        if(l == r)
            return a[l];
        if(l > r)
            return 0;
        if(mem[l][r] != -1)
            return mem[l][r];
        mem[l][r] = Integer.max(a[l]+Integer.min(fun(l+1, r-1, a, mem), fun(l+2, r, a, mem)),
                    a[r]+Integer.min(fun(l+1, r-1, a, mem), fun(l, r-2, a, mem)));
        return mem[l][r];
    }
    
    public int maxcoin(int[] a) {
        int n = a.length;
        int[][] mem = new int[n][n];
        for(int i = 0; i<n; i++)
            Arrays.fill(mem[i], -1);
        return fun(0, a.length-1, a, mem);
    }

}
