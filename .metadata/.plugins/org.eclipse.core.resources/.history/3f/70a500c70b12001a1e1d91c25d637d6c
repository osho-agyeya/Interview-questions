package leetcode;

import main_solution.TreeNode;

public class Next_Greater_Number_BST {
	
	public TreeNode getSuccessor(TreeNode root, int data) {
	    if( root == null ) return null;
	    TreeNode temp = null ;
	    while( root != null ){
	        if( root.val > data )
	        {
	            temp = root;
	            root = root.left;
	        }
	        else 
	        root = root.right;
	    }
	    return temp;
	}

}
