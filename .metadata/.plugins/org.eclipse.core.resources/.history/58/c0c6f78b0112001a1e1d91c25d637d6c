package interviewbit;

public class Maximum_Absolute_Difference {

	 public int maxArr(int[] A) {
        int mm=0;
        for(int i=0;i<A.length;i++){
            for(int j=i+1;j<A.length;j++)
                mm=Math.max(mm,Math.abs(A[i]-A[j])+Math.abs(i-j));
        }
        return mm;
        
    }
	
}
