package interviewbit;

public class Max_Sum_Without_Adjacent_Elements {
	
	public int adjacent(int[][] a) {
        int n=a[0].length;
        int inc=Math.max(a[0][0],a[1][0]);
        int exc=0;
        for(int i=1;i<n;i++){
            int element=Math.max(a[0][i],a[1][i]);
            int temp=inc;
            inc=Math.max(inc,exc+element);
            exc=temp;
        }
        return Math.max(inc,exc);
        
    }

}
