package interviewbit;

public class Flip {
public int[] flip(String str) {
        if (str.length() == 0)
        return new int[]{};         
    boolean zero = false;
    int gain[] = new int[str.length()];
    for (int i = 0; i< str.length(); i++) {                
           gain[i] = (str.charAt(i) == '1') ? -1 : 1;
       if (str.charAt(i) == '0') {
               zero = true; 
           }
    }
    if(!zero)
        return new int[]{};
    int n = gain.length;
    int start=0,end=0,s=0;
    int max_so_far=Integer.MIN_VALUE,max_here=0;
    for(int i=0;i<n;i++) {
    	max_here+=gain[i];
    	if (max_so_far < max_here) 
        { 
            max_so_far = max_here; 
            start = s; 
            end = i; 
        } 
        if (max_here < 0) 
        { 
            max_here = 0; 
            s = i + 1; 
        } 	
    }
    return new int[] {start+1,end+1};
    }
}
